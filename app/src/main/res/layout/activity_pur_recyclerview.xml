<?xml version="1.0" encoding="utf-8"?>
<study.com.purerecyclerview.freshlayout.layout.PureRefreshLayout3 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recycler_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PurRecyclerviewActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <CheckBox
        android:id="@+id/check_has_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="50dp"
        android:text="没有有更多了"
        android:textSize="20sp" />

</study.com.purerecyclerview.freshlayout.layout.PureRefreshLayout3>